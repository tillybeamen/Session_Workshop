@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<div class="text-center mx-auto w-50">
    <h2>@Context.Session.GetInt32("Count")</h2>
    <div class="d-flex justify-content-center">
        <form action="addone" method="post">
            <button class="btn btn-warning m-2 shadow-lg">+1</button>
        </form>
        <form action="subtractone" method="post">
            <button class="btn btn-primary m-2 shadow-lg">-1</button>
        </form>
    </div>
    <div class="d-flex justify-content-center">
        <form action="timestwo" method="post">
            <button class="btn btn-danger m-2 shadow-lg">x2</button>
        </form>
        <form action="addrandom" method="post">
            <button class="btn btn-success m-2 shadow-lg">+Random</button>
        </form>
    </div>
</div>